{
  "manifest_version": 3,
  "name": "ZR spy",
  "version": "1.0.0",
  "description": "ZR Tracker 辅助工具",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png",
    "256": "icons/256x256.png"
  },
  "default_locale": "zh_CN",
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "*://sshwy.cn/zr-api/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "bypass-password",
      "enabled": true,
      "path": "rulesets/bypass-password.json"
    }]
  },
  "action": {
    "default_popup": "dist-popup/index.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["dist-popup/*"],
    "matches": ["<all_urls>"]
  }]
}
